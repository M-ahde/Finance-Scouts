{
  "name": "simple-vite-react-express",
  "version": "2.0.0",
  "description": "Production-ready full-stack template with React 19, Vite 6, Express, and PostgreSQL",
  "main": "src/server/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "setup": "node scripts/setup.js",
    "build": "vite build",
    "start": "node src/server/index.js",
    "server": "nodemon src/server/index.js",
    "server:debug": "nodemon --inspect src/server/index.js",
    "client": "vite",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "clean": "rm -rf dist node_modules/.cache",
    "preview": "vite preview",
    "db:setup": "npx prisma migrate dev && npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "db:seed": "node prisma/seed.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "author": "Avi Maiti",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@mui/styles": "^6.4.8",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "axios": "^1.13.2",
    "celebrate": "^15.0.3",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "formik": "^2.4.9",
    "helmet": "^8.1.0",
    "pg": "^8.17.1",
    "prisma": "^7.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "react-toastify": "^11.0.5",
    "strong-error-handler": "^5.0.27",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "overrides": {
    "@mui/styles": {
      "react": "$react"
    }
  }
}