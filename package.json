{
  "name": "simple-vite-react-express",
  "version": "2.0.0",
  "description": "Production-ready full-stack template with React 19, Vite 6, Express, and PostgreSQL",
  "main": "src/server/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "setup": "node scripts/setup.js",
    "build": "vite build",
    "start": "node src/server/index.js",
  "server": "nodemon --watch 'src/server/**/*' --exec 'ts-node' src/server/index.ts",
      "server:debug": "nodemon --inspect src/server/index.js",
    "client": "vite",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "clean": "rm -rf dist node_modules/.cache",
    "preview": "vite preview",
    "db:setup": "npx prisma migrate dev && npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "db:seed": "node prisma/seed.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
    
  },
  "author": "Avi Maiti",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.2",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@mui/styles": "^6.4.8",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@radix-ui/themes": "^3.3.0",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.90.20",
    "axios": "^1.13.2",
    "celebrate": "^15.0.3",
    "class-variance-authority": "^0.7.1",
    "cmdk": "^1.1.1",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "embla-carousel-react": "^8.6.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "formik": "^2.4.9",
    "framer-motion": "^12.33.0",
    "helmet": "^8.1.0",
    "i18next": "^25.8.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.563.0",
    "mongoose": "^9.1.6",
    "next-themes": "^0.4.6",
    "pg": "^8.17.1",
    "prisma": "^7.2.0",
    "react": "^19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.71.1",
    "react-i18next": "^16.5.4",
    "react-resizable-panels": "^4.6.2",
    "react-router-dom": "^7.12.0",
    "react-toastify": "^11.0.5",
    "recharts": "^3.7.0",
    "sonner": "^2.0.7",
    "strong-error-handler": "^5.0.27",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "tailwindcss": "^3.4.19",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "overrides": {
    "@mui/styles": {
      "react": "$react"
    }
  }
}
