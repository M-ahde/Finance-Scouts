# Server Configuration
PORT=8080
NODE_ENV=development

# Database Configuration
# Replace <username> with your PostgreSQL username
# Format: postgres://<username>:<password>@<host>:<port>/<database>?schema=<schema>
DATABASE_URL="postgres://<username>@localhost:5432/simple-vite-db?schema=public"

# Optional: Add your own environment variables below
# API_KEY=your-api-key
# JWT_SECRET=your-jwt-secret
# Admin API key (required in production to access protected admin endpoints)
ADMIN_API_KEY=change-this-key

# Frontend key for admin dashboard requests
VITE_ADMIN_API_KEY=change-this-key
